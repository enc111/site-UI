.news-events
  & h1
    margin 5.1rem auto 1.78rem auto
  & img
    background-color #ffffff
    width 5.278rem
    height 11.78rem
    align left
  & > div:not(:last-of-type)
    margin-right 1rem

.news-events__first
.news-events__second
  width 16rem
  height 11.78rem
  display inline-block
  text-align left
  border-radius 0.2rem
  & p
    font-family LatoRegular
  & p
  & h4
    font-size 0.61rem

.news-events__first
  background second-color
  & h3
    font-family LatoLight
    font-size 1.56rem
    line-height 1.46rem
    margin 1.22rem auto 0 1.22rem
  & h4
    margin 0.6rem auto 0 1.22rem
    word-spacing 0.24rem
  & p
    margin 0.7rem 1.35rem 0 1.22rem
    word-spacing 0.03rem
    letter-spacing 0.02rem

.news-events__second
  background first-color
  & h3
    font-family LatoLight
    font-size 1.67rem
    line-height 2.5rem
    margin 1.45rem auto 0 1.1rem
  & h4
    margin 0.7rem auto 0 1.167rem
    word-spacing 0.05rem
    letter-spacing 0.038rem
    font-size 0.68rem
  & p
    margin 0.22rem auto 0 1.167rem
    word-spacing 0.03rem
    letter-spacing 0.02rem
  & button
    margin 0.93rem auto auto 1.72rem
    button-appearance 7.167rem 1.18rem 0.56rem #ffffff first-color
    font-family LatoBlack//font-weight bold
    button-shadow 0.2rem first-border-color

.news-events__first__text
.news-events__second__text
  display inline-block
  width 10.7rem
  vertical-align top
  color #ffffff
  & h4
    text-transform uppercase
  & h3
    font-weight normal
.news-events__second__text_big
  font-size 4.056rem
  letter-spacing 0.009rem
  margin-right 0.5rem