.news
  & h1
    margin 5.1rem auto 1.78rem auto
  & img
    background-color #ffffff
    width 5.278rem
    height 11.78rem
    align left
  & > div:not(:last-of-type)
    margin-right 1rem

.news__wrap
.events__wrap
  width 16rem
  height 11.78rem
  display inline-block
  text-align left
  border-radius 0.2rem
  & p
    font-family LatoRegular
  & p
  & h4
    font-size 0.61rem

.news__wrap
  background second-color
  & h3
    font-family LatoLight
    font-size 1.56rem
    line-height 1.46rem
    margin 1.22rem auto 0 1.22rem
  & h4
    margin 0.6rem auto 0 1.22rem
    word-spacing 0.24rem
  & p
    margin 0.7rem 1.35rem 0 1.22rem
    word-spacing 0.03rem
    letter-spacing 0.02rem

.news__wrap__text
.events__wrap__text
  display inline-block
  width 10.7rem
  vertical-align top
  color #ffffff
  & h4
    text-transform uppercase
  & h3
    font-weight normal
